<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/owner_image"
        android:layout_width="70dp"
        android:layout_height="70dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Repositório"
        android:textColor="@color/white"
        android:layout_marginStart="18dp"
        android:textSize="12sp"

        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/owner_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repo_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⭐ 0"
        android:textColor="@color/white"
        android:textSize="12sp"

        android:layout_marginStart="12dp"

        app:layout_constraintStart_toStartOf="@id/repo_name"
        app:layout_constraintTop_toBottomOf="@id/repo_name" />

    <TextView
        android:id="@+id/repo_forks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🔁 0"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="9dp"

        app:layout_constraintStart_toStartOf="@id/repo_stars"
        app:layout_constraintTop_toBottomOf="@id/repo_stars" />

    <TextView
        android:id="@+id/owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="15dp"

        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@id/repo_name"
        app:layout_constraintTop_toBottomOf="@id/repo_forks" />

</androidx.constraintlayout.widget.ConstraintLayout>